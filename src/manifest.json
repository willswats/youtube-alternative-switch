{
  "name": "YouTube Alternative Switch",
  "version": "1.6.2",
  "description": "Quickly switch videos between YouTube, Piped, Invidious and Chat Replay.",
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "manifest_version": 2,
  "icons": {
    "48": "./icons/logo-48.png",
    "96": "./icons/logo-96.png",
    "120": "./icons/logo-120.png"
  },
  "options_ui": {
    "page": "./options/options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{0290a66b-cebd-47e3-9475-9da502aab1ff}"
    }
  },
  "commands": {
    "switch-youtube": {
      "suggested_key": {
        "default": "Ctrl+Alt+Y"
      },
      "description": "Switch to YouTube."
    },
    "switch-piped": {
      "suggested_key": {
        "default": "Ctrl+Alt+P"
      },
      "description": "Switch to Piped."
    },
    "switch-invidious": {
      "suggested_key": {
        "default": "Ctrl+Alt+I"
      },
      "description": "Switch to Invidious."
    },
    "switch-chat-replay": {
      "suggested_key": {
        "default": "Ctrl+Alt+C"
      },
      "description": "Switch to Chat Replay."
    }
  }
}
