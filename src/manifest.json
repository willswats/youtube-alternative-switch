{
  "name": "YouTube Alternative Switch",
  "version": "1.2.0",
  "description": "Quickly switch between YouTube, Piped, and Invidious when watching a video.",
  "permissions": [
    "tabs",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "manifest_version": 2,
  "icons": {
    "48": "./icons/logo-48.png",
    "96": "./icons/logo-96.png",
    "120": "./icons/logo-120.png"
  },
  "commands": {
    "switch-youtube": {
      "suggested_key": {
        "default": "Ctrl+Alt+Y"
      },
      "description": "Switch to YouTube."
    },
    "switch-piped": {
      "suggested_key": {
        "default": "Ctrl+Alt+P"
      },
      "description": "Switch to Piped."
    },
    "switch-invidious": {
      "suggested_key": {
        "default": "Ctrl+Alt+I"
      },
      "description": "Switch to Invidious."
    }
  }
}
